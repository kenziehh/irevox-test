datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid()) @db.Uuid
  name     String
  email    String    @unique
  password String
  products Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  userId      String   @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
}
